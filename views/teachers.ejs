      <div class="teacher-card deputy">
        <img src="<%= dep.img %>" alt="<%= dep.name %>">
        <div class="teacher-info">
          <div class="teacher-name"><%= dep.name %></div>
          <div class="teacher-position"><%= dep.position %></div>
        </div>
      </div>
    <% }) %>
  </div>
  <!-- Преподаватели -->
  <h2 class="section-title"><%= __('Преподаватели') %></h2>
  <div class="teachers-grid">
    <% teachers.forEach((t, i) => { %>
      <div class="teacher-card">
        <img src="<%= t.img %>" alt="<%= t.name %>">
        <div class="teacher-info">
          <div class="teacher-name"><%= t.name %></div>
          <div class="teacher-position"><%= t.position %></div>
        </div>
      </div>
      <% if ((i+1) % 5 === 0) { %><div class="teachers-row-break"></div><% } %>
    <% }) %>
